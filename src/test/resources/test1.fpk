@help:{
  "Specify a class name (eg foo.bar.Class)"
}
@init:{
  if ($arg.length == 0) {
     fail("You must specify a class name");
     return;
  }

  package = $arg[0].substring(0, $arg[0].lastIndexOf('.'));
  packageDir = package.replaceAll('\\.', '/');
  classname = $arg[0].substring(package.length() + 1);
}

++@{packageDir}/@{classname}.java:{
package @{package};

public class @{classname} {

}
}

++@{packageDir}/@{classname}Entity.java:{
package @{package};

public class @{classname}Entity {

}
}